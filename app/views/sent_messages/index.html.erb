<h1>Sent Messages</h1>
<% if @count > 0 then %>
<table class="table table-hover">
	<thead>
		<tr>
			<th>Message</th>
			<th>When</th>
			<th />
		</tr>
	</thead>
	<tfoot>
		<tr>
			<td colspan="3">Total Messages Sent: <%= @count %></td>
		</tr>
	</tfoot>
	<tbody>
<% @messages.each do |message| %>
		<tr>
			<td><%= message.status %> Message</td>
			<td title="<%= message.failed_at || message.delivered_at %>"><%= time_ago_in_words message.failed_at || message.delivered_at %> ago</td>
			<td>Link to details here</td>
		</tr>
<% end %>
	</tbody>
</table>
<%= paginate @messages, window: 2 %>
<% else %>
<em>No messages to show</em>
<% end %>
